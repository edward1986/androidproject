<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    tools:context=".MainActivity">

    <TextView android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:text="Taj Mahal"
        android:id="@+id/txvTaj"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:maxLength="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgTaj"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTaj"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textColor="#333"
        android:transitionName="sharedTitle"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="77dp"
        android:layout_height="70dp"
        android:id="@+id/imgTaj"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:src="@drawable/taj_mahal"
        android:transitionName="sharedImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>